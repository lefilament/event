<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Index - Events list -->
    <template
        id="registration_attendee_details"
        inherit_id="website_event.registration_attendee_details"
        name="Registration Attendee Tracks Details"
    >
        <xpath expr="//t[@t-set='counter_type']" position="before">
            <!-- Show wishlist -->
            <t
                t-set="tracks"
                t-value="event.track_ids.filtered(lambda track: track.is_reminder_on)"
            />

            <div class="modal-body border-bottom bg-light">
                <t t-if="tracks">
                    <h5 class="mt-1 pb-2 border-bottom">Your wishlist :</h5>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Track</th>
                                <th>Start</th>
                                <th>End</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="tracks" t-as="track">
                                <td t-out="track.name" />
                                <td
                                    t-out="track.date"
                                    t-options="{'widget': 'datetime', 'tz_name': event.date_tz, 'format': 'short'}"
                                />
                                <td
                                    t-out="track.date_end"
                                    t-options="{'widget': 'datetime', 'tz_name': event.date_tz, 'format': 'short'}"
                                />
                            </tr>
                        </tbody>
                    </table>
                </t>
                <t t-else="">
                    <div class="col-12 p-2">
                        You did not subscribe to any tracks.
                    </div>
                </t>
            </div>
        </xpath>
    </template>
</odoo>
